            <input type="password" class="form" name="pass" required><br>
            <input type="submit" class="form" name="login" value="Login">
        </form>
    </div>

    <div class="registerContainer">
        <a href="/register">Not yet registered?</a>
    </div>
</div>
<script src="/js/LoginPage.js"></script>